pipeline {
    agent any

    environment {
        IMAGE_NAME = 'wbrymo/webapp-calculator'
    }

    stages {
        stage('Clone Repo') {
            steps {
                sh '''
                    echo "ðŸ§¹ Cleaning up existing folder if any..."
                    rm -rf WebAppCal || echo "Nothing to delete"
                    git clone https://github.com/wbrymo/JavaCalculator.git WebAppCal
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('WebAppCal') {
                    script {
                        def app = docker.build("${IMAGE_NAME}")
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-creds') {
                        docker.image("${IMAGE_NAME}").push('latest')
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
