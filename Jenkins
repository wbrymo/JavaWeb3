pipeline {
    agent any

    environment {
        IMAGE_NAME = 'wbrymo/java-calculator'
    }

    stages {
        stage('Clone Repo') {
            steps {
                sh '''
                    echo "ðŸ§¹ Cleaning up existing folder if any..."
                    ls -la || true
                    rm -rf JavaCalculator || echo "Nothing to delete"
                    echo "âœ… After cleanup:"
                    ls -la
                    echo "ðŸ“¥ Cloning repository..."
                    git clone https://github.com/wbrymo/JavaCalculator.git
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('JavaCalculator') {
                    script {
                        def app = docker.build("${IMAGE_NAME}")
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-creds') {
                        docker.image("${IMAGE_NAME}").push('latest')
                    }
                }
            }
        }
    }

    post {
        always {
            echo "ðŸ§¼ Cleaning up Jenkins workspace..."
            cleanWs()
        }
    }
}
